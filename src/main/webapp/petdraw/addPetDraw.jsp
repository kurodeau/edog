<%@ page contentType="text/html; charset=UTF-8" pageEncoding="Big5"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ page import="com.petdraw.entity.*"%>
<%
//見com.emp.controller.EmpServlet.java第238行存入req的empVO物件 (此為輸入格式有錯誤時的empVO物件)
PetDrawVO petDrawVO = (PetDrawVO) request.getAttribute("petDrawVO");
%>
<!DOCTYPE html>
<html>
<head>
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<title>寵物抽卡新增 - addPetDraw.jsp</title>


<style>
table#table-1 {
	background-color: #CCCCFF;
	border: 2px solid black;
	text-align: center;
}

table#table-1 h4 {
	color: red;
	display: block;
	margin-bottom: 1px;
}

h4 {
	color: blue;
	display: inline;
}
</style>

<style>
table {
	width: 450px;
	background-color: white;
	margin-top: 1px;
	margin-bottom: 1px;
}

table, th, td {
	border: 0px solid #CCCCFF;
}

th, td {
	padding: 1px;
}
</style>

</head>
<body bgcolor='white'>

	<table id="table-1">
		<tr>
			<td>
				<h3>寵物抽卡新增 - addPetDraw.jsp</h3>
			</td>
			<td>

				<h4>
					<a href="select_page.jsp"><img src="images/tomcat.png"
						width="100" height="100" border="0">回首頁</a>
				</h4>
			</td>
		</tr>
	</table>

	<h3>資料新增:</h3>
	<!-- 如果有錯誤消息，顯示錯誤消息 -->
	<c:if test="${not empty errorMsgs}">
		<font style="color: red">請修正以下錯誤:</font>
		<ul>
			<c:forEach var="message" items="${errorMsgs}">
				<li style="color: red">${message}</li>
			</c:forEach>
		</ul>
	</c:if>
	<FORM METHOD="post" ACTION="petDraw.do" name="form1">
		<table>
			<tr>
				<td>被配對到的對象:</td>
				<td><c:if test="${PetDrawVO ne null}">
                        配對對象ID: ${PetDrawVO.getMemberPairId()}<br>
						<img src="${pairedPetDrawVO.petImageURL}" alt="寵物圖片">
					</c:if>
			</tr>
		</table>
		<br> <input type="hidden" name="action" value="insert"> <input
			type="submit" name="action" value="同意">
	</FORM>
</body>
</html>
